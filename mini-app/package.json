{
  "name": "vite-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 8080",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && yarn run stylelint",
    "stylelint": "stylelint '**/*.css' --cache",
    "preview": "vite preview --host --port 80",
    "codegen:openapi": "openapi -i http://api/api/json -o ./src/services/openapi"
  },
  "dependencies": {
    "@mantine/core": "^8.1.1",
    "@mantine/hooks": "^8.1.1",
    "@telegram-apps/sdk-react": "^3.3.2",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "add": "^2.0.6",
    "chordproject-parser": "^1.0.4",
    "chordsheetjs": "^12.3.0",
    "i18next": "^24.0.2",
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.1",
    "i18next-resources-to-backend": "^1.2.1",
    "javascript-time-ago": "^2.5.11",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dnd": "^14.0.2",
    "react-dnd-html5-backend": "^14.0.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.1.3",
    "react-router": "^7.6.0",
    "vite-tsconfig-paths": "^5.0.1",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chordsheetjs": "^6.2.0",
    "@types/lodash": "^4.17.17",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "openapi-typescript": "^7.4.1",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.5.5"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrderParserPlugins": [
      "tsx",
      "jsx",
      "typescript",
      "decorators-legacy"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^@generated/(.*)$",
      "^@src/(.*)$",
      "^@components/(.*)$",
      "^@features/(.*)$",
      "^@hooks/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
